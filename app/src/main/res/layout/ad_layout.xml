<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ad_title"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/ad_title"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/ad_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Join Iskra CODM Community on Facebook" />

        <TextView
            android:id="@+id/ad_size"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:text="double something which is double but double and double"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/ad_validity"
            app:layout_constraintEnd_toEndOf="@+id/ad_title"
            app:layout_constraintStart_toStartOf="@+id/ad_validity"
            app:layout_constraintTop_toBottomOf="@+id/ad_title" />

        <TextView
            android:id="@+id/ad_validity"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/ad_amount"
            app:layout_constraintEnd_toEndOf="@+id/ad_title"
            app:layout_constraintStart_toStartOf="@+id/ad_amount"
            app:layout_constraintTop_toBottomOf="@+id/ad_size"
            tools:text="Validity: 5 days" />

        <TextView
            android:id="@+id/ad_amount"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/ad_status"
            app:layout_constraintEnd_toEndOf="@+id/ad_title"
            app:layout_constraintStart_toEndOf="@+id/textView16"
            app:layout_constraintTop_toBottomOf="@+id/ad_validity"
            tools:text="Amount: $1050" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adv Selected: "
            android:textColor="@color/primaryTextColor"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/ad_title"
            app:layout_constraintTop_toTopOf="@+id/ad_size" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For Days: "
            android:textColor="@color/primaryTextColor"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/ad_validity" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount: "
            android:textColor="@color/primaryTextColor"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView14"
            app:layout_constraintTop_toTopOf="@+id/ad_amount" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textColor="@color/primaryTextColor"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView16"
            app:layout_constraintTop_toTopOf="@+id/ad_status" />

        <TextView
            android:id="@+id/ad_status"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAllCaps="true"
            android:textColor="@color/primaryTextColor"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/make_payment_btn"
            app:layout_constraintEnd_toEndOf="@+id/ad_amount"
            app:layout_constraintStart_toStartOf="@+id/ad_amount"
            app:layout_constraintTop_toBottomOf="@+id/ad_amount" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/make_payment_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Make Payment"
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:textSize="11sp"
            app:icon="@drawable/ic_baseline_attach_money_24"
            app:iconSize="14dp"
            app:iconTint="@color/green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ad_status"
            app:layout_constraintStart_toStartOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/ad_status"
            app:strokeColor="@color/green" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>